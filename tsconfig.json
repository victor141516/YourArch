{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "src",
    "sourceMap": true,
    "target": "es6",
    "lib": ["dom", "esnext"],
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "typeRoots": ["./src/@types"]
  }
}
